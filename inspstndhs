                <div class="hotspot-area" style="top: 27%; left: 62.55%; width: 16.5%; height: 46%" data-hotspot="4"></div>
                <div class="hotspot-area" style="top: 27%; left: 83.5%; width: 16.5%; height: 46%;" data-hotspot="5"></div>
            </div>
