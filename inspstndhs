    <!-- Modal Structure -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h2 id="modal-title">Hotspot Information</h2>
            </div>
            <div class="modal-body" id="modal-body">
                <p>Content will be loaded here...</p>
            </div>
        </div>
    </div>

    <script>
        // Hotspot content data
        const hotspotData = {
            1: {
                title: "üé© Courtesy & Respect",
                content: `
                    <p style="text-align: justify;">Remain professional, firm yet courteous‚Äîeven in difficult situations. Use respectful language, listen to concerns, and avoid confrontational tones. Remember that licensees may be defensive or stressed, and your calm professionalism can defuse tension while maintaining your authority.</p>

                `
            },
            2: {
                title: "‚öñÔ∏è Impartiality",
                content: `
                    <p style="text-align: justify;">Consistently apply rules to all; guard against favoritism or bias. Treat large corporations and small businesses the same way. Don't let personal relationships, past experiences, or assumptions about certain types of businesses affect your judgment or enforcement decisions.</p>

                `
            },
            3: {
                title: "üîí Confidentiality",
                content: `
                    <p style="text-align: justify;">Safeguard licensee's and public's sensitive information. Don't discuss one licensee's issues with another, avoid sharing details in public spaces, and follow your agency's protocols for handling confidential business information or trade secrets you may encounter.</p>

                `
            },
            4: {
                title: "üíé Clarity",
                content: `
                    <p style="text-align: justify;">Explain findings, corrections, and next steps in direct, accessible language. Avoid regulatory jargon that confuses licensees. Make sure they understand not just what needs to be fixed, but also why it matters and how to achieve compliance.</p>

                `
            },
            5: {
                title: "üéì Supportive Educator",
                content: `
                    <p style="text-align: justify;">Explain not only what should be fixed, but also how and why‚Äîcompliance, not punishment, is the goal. Connect violations to their impact on public safety, suggest resources for compliance assistance, and recognize when licensees are making good faith efforts to improve.</p>

                `
            },
        };

        // Get DOM elements
        const modal = document.getElementById('modal');
        const modalTitle = document.getElementById('modal-title');
        const modalBody = document.getElementById('modal-body');
        const closeBtn = document.getElementsByClassName('close')[0];

        // Add click events to hotspot areas
        document.querySelectorAll('.hotspot-area').forEach(hotspot => {
            hotspot.addEventListener('click', function() {
                const hotspotId = this.getAttribute('data-hotspot');
                showModal(hotspotId);
            });
        });

        // Modal functionality
        function showModal(hotspotId) {
            const data = hotspotData[hotspotId];
            if (data) {
                modalTitle.textContent = data.title;
                modalBody.innerHTML = data.content;
                modal.style.display = 'block';
                
                // Add show class after a brief delay for animation
                setTimeout(() => {
                    modal.classList.add('show');
                }, 10);
            }
        }

        function closeModal() {
            modal.classList.remove('show');
            setTimeout(() => {
                modal.style.display = 'none';
            }, 300);
        }

        // Event listeners for modal
        closeBtn.addEventListener('click', closeModal);
        
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                closeModal();
            }
        });

        // Keyboard support
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && modal.style.display === 'block') {
                closeModal();
            }
        });
    </script>
</body>
